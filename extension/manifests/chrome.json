{
  "manifest_version": 2,
  "name": "Memberry",
  "description": "Full-text search through history",
  "version": "0.1",
  "default_locale": "en",

  "icons": {
    "128": "assets/icon-128.png"
  },

  "browser_action": {
    "default_icon": "assets/icon-128.png"
  },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],

  "options_ui": {
    "page": "options.html",
    "open_in_tab": false,
    "chrome_style": true
  },

  "permissions": [
    "<all_urls>",
    "nativeMessaging",
    "storage"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "omnibox": { "keyword" : "mem" }
}
